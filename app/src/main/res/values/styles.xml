<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditText" />

    <style name="EditText.Default">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_edit_text_rounded</item>
        <item name="android:padding">@dimen/padding_16</item>
    </style>


    <style name="Button" />

    <style name="Button.Default">
        <item name="android:background">@drawable/background_edit_text_rounded</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/padding_16</item>
    </style>

    <style name="Dialog"/>
    <style name="Dialog.DialogFragment" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">75%</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
